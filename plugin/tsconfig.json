{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["es2022", "ESNext", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  }
}
